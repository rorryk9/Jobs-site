@model Post

<h1>Edit Product</h1>

<form asp-action="Edit">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Enter name" name="name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label>Content</label>
        <input type="text" class="form-control" placeholder="Enter content" name="content" value="@Model.Content">
    </div>

    <button type="submit" class="btn btn-primary">Edit</button>
    <a asp-action="Index">
        <button type="button" class="btn btn-secondary">Cancel</button>
    </a>
</form>