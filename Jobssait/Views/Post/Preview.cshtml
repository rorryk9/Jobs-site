@model Post

<h1>Preview</h1>

<form asp-action="Aply" asp-route-id="@Model.Id">

    <div class="form-group">
        <label>Job type</label>
        <input type="text" class="form-control" value="@Model.Name" disabled>
    </div>
    <div class="form-group">
        <label>Description</label>
        <input type="text" class="form-control" value="@Model.Content" disabled>
    </div>
    <div class="form-group">
        <label>Available Spaces</label>
        <input type="number" class="form-control" value="@Model.Spaces" disabled>
    </div>
    
    <button type="submit" class="btn btn-primary">Aply</button>
    
    <a asp-action="Index">
        <button type="button" class="btn btn-secondary">Cancel</button>
    </a>
</form>